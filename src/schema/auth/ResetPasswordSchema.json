{
  "tags": ["auth"],
  "query": {
    "type": "object",
    "required": ["code"],
    "properties": {
      "code": {
        "type": "string"
      }
    }
  },
  "body": {
    "type": "object",
    "properties": {
      "password": {
        "type": "string",
        "minLength": 6,
        "maxLength": 100
      }
    }
  },
  "response": {
    "200": {
      "type": "object",
      "description": "Successful response",
      "properties": {
        "statusCode": {
          "type": "number",
          "format": "integer",
          "default": 200
        },
        "message": {
          "type": "string",
          "description": "Success message",
          "default": "Password reset successfully."
        }
      }
    },
    "400": {
      "description": "Bad request response",
      "type": "object",
      "properties": {
        "statusCode": {
          "type": "number",
          "format": "integer",
          "default": 400
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
