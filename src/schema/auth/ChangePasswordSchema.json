{
  "tags": ["auth"],
  "security": [{ "BearerAuth": [] }],
  "body": {
    "type": "object",
    "required": ["password", "newPassword"],
    "properties": {
      "password": {
        "type": "string",
        "minLength": 6,
        "maxLength": 100,
        "description": "The current password of the user"
      },
      "newPassword": {
        "type": "string",
        "minLength": 6,
        "maxLength": 100,
        "description": "The new password of the user"
      }
    }
  },
  "response": {
    "200": {
      "description": "Password changed successfully.",
      "type": "object",
      "properties": {
        "statusCode": {
          "type": "number",
          "format": "integer",
          "default": 200
        },
        "message": {
          "type": "string"
        },
        "token": {
          "type": "string"
        }
      }
    },
    "400": {
      "description": "Bad request response",
      "type": "object",
      "properties": {
        "statusCode": {
          "type": "number",
          "format": "integer",
          "default": 400
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
